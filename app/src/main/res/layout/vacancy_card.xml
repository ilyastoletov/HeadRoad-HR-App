<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:id="@+id/vacancy_card"
    android:layout_width="match_parent"
    android:minWidth="350dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:minWidth="350dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/vacancy_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:textSize="14sp"
            android:text="Открыта"
            android:textColor="#18B31E"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/vacancy_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:textSize="14sp"
            android:textColor="#7D7D7D"
            android:text="02.05.2023"
            android:fontFeatureSettings="pnum, lnum"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/vacancy_status"/>

        <TextView
            android:id="@+id/vacancy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/vacancy_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vacancy_quantity"
            android:maxLines="2"
            android:text="Senior Front-End (React) Engine"
            android:fontFeatureSettings="pnum, lnum"
            android:fontFamily="@font/raleway_semi_bold"
            android:textSize="21sp"
            android:textColor="#3E3A49"/>

        <TextView
            android:id="@+id/vacancy_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:textSize="14sp"
            android:text="507 откликов"
            android:textColor="#3E3A49"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:fontFeatureSettings="pnum, lnum"
            app:layout_constraintTop_toBottomOf="@id/vacancy_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/new_applicants_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 новых"
            android:textSize="16.5sp"
            android:fontFamily="@font/raleway_semi_bold"
            android:textAllCaps="false"
            android:fontFeatureSettings="pnum, lnum"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/vacancy_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>