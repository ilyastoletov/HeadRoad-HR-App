<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/open_metrics_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

        <TextView
            android:id="@+id/metrics_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название метрики"
            android:maxLength="100"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_semi_bold"
            android:textSize="18sp"/>

            <TextView
                android:id="@+id/metrics_sorting_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сортировка по: Отклики"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_medium"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/metrics_vacancy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="По вакансии: Junior Android Developer"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_medium"
                android:textSize="16sp"
                android:layout_marginTop="5dp"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>